<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/item_bottom_padding">

    <ImageView android:id="@+id/product_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:background="@drawable/img_shoe"/>

    <TextView android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_800"
        android:textSize="@dimen/font_size_big"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginStart="@dimen/product_margin"
        android:layout_marginEnd="@dimen/product_margin"
        app:layout_constraintTop_toBottomOf="@id/product_img"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Shooting Stars"/>

    <TextView android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_grey_400"
        android:textSize="@dimen/font_size_medium"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginStart="@dimen/product_margin"
        android:layout_marginEnd="@dimen/product_margin"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="$ 45"/>
</android.support.constraint.ConstraintLayout>